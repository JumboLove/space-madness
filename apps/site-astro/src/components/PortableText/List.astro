---
import { List as PortableTextList } from "astro-portabletext/components";

export type Props = Parameters<typeof PortableTextList>[0];

const props = Astro.props;
const listItemIs = (listItem: string) => listItem === props.node.listItem;

// Use `listItemIs` to setup chained ternary operators to define custom Lists
// const Cmp = listItemIs("star") ? ListStyleStar : List;
const Cmp = PortableTextList;
---

<Cmp {...props}><slot /></Cmp>
