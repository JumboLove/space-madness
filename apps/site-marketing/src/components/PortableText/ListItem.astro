---
import { ListItem as PortableTextListItem } from "astro-portabletext/components";

export type Props = Parameters<typeof PortableTextListItem>[0];

const props = Astro.props;
const listItemIs = (listItem: string) => listItem === props.node.listItem;

// Use `listItemIs` to setup chained ternary operators to define custom list items
// const Cmp = listItemIs("star") ? ListItemStyleStar : ListItem;
const Cmp = PortableTextListItem;
---

<Cmp {...props}><slot /></Cmp>
